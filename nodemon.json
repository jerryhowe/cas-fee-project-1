{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node --experimental-modules --es-module-specifier-resolution=node src/server/index.js"
  },
  "watch": ["."],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json, cjs, mjs, pug"
}
