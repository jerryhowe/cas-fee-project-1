{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "env": {
    "node": true,
    "es2021": true,
    "browser": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", 2],
    "no-console": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "js": "off",
        "mjs": "off"
      }
    ],
    "no-return-await": "off",
    "class-methods-use-this": "off",
    "no-unused-expressions": "off"
  },
  "ignorePatterns": ["**/scripts/libs/*.js"]
}
